{
  "prompt_version": "1.0",
  "intent": "wildfire_info_response",
  "description": "Template to respond to requests for wildfire information, weather risk, and road conditions. Focus on concise, actionable guidance with clear data fields and sources.",
  "data_schema": {
    "location": {
      "type": "string",
      "description": "Geographic area of interest (city, county, state)."
    },
    "as_of": {
      "type": "string",
      "format": "ISO 8601",
      "description": "Timestamp indicating when the data is valid."
    },
    "wildfire_status": {
      "incident_id": "string",
      "name": "string",
      "status": "enum: Active, Contained, Extinguished",
      "acres": "number",
      "containment": "string",
      "start_time": "string (ISO 8601)",
      "expected_end": "string (ISO 8601) or null"
    },
    "weather_risks": {
      "probability_of_rain": {
        "percent": "number (0-100)",
        "time_window": "string (e.g., 'next 24h')",
        "confidence": "enum: high, medium, low"
      },
      "red_flag_warnings": [
        {
          "start_time": "string (ISO 8601)",
          "end_time": "string (ISO 8601)",
          "level": "enum: Watch, Red Flag, Extreme",
          "description": "string"
        }
      ],
      "extreme_changes": [
        {
          "parameter": "string (e.g., 'wind', 'humidity')",
          "change": "string (e.g., 'gusts to 40 mph')",
          "magnitude": "string",
          "time_frame": "string (e.g., 'next 6-12h')"
        }
      ],
      "temperature": {
        "value": "number",
        "units": "enum: F, C"
      },
      "humidity": {
        "percent": "number (0-100)"
      },
      "wind": {
        "speed": "number",
        "gusts": "number",
        "direction": "string"
      }
    },
    "road_conditions": {
      "closures": [
        {
          "road": "string",
          "direction": "string",
          "start_time": "string (ISO 8601)",
          "end_time": "string (ISO 8601) or null",
          "reason": "string",
          "detour": "string"
        }
      ],
      "delays_minutes": "number",
      "visibility": "string",
      "evac_info": "string"
    },
    "risk_assessment": {
      "overall_risk": "enum: Low, Moderate, High, Extreme",
      "notes": "string"
    },
    "data_sources": [
      {
        "name": "string",
        "type": "string",
        "url": "string"
      }
    ],
    "output_format": {
      "style": "enum: markdown, text, json",
      "tone": "enum: neutral, informative",
      "units": {
        "temperature": "enum: F, C",
        "wind": "enum: mph, km/h",
        "rain": "enum: in, mm"
      }
    }
  },
  "llm_instruction": "Generate a concise, user-friendly briefing for the requested location. Present the information in clearly labeled sections: Wildfire Status, Weather Risks, Road Conditions, and Practical Recommendations. Use bullet points, include timestamp and data sources. Highlight probabilities (e.g., probability of rain), red flag warnings, and any extreme changes. Do not speculate beyond provided dataâ€”where uncertainties exist, state them clearly.",
